:local HOST "8.8.8.8"
:local PINGCOUNT "5"
:local DELAY "3s"
:local ADMINMAIL "alarmmasterjs@gmail.com"

:if ([/ping $HOST interval=1 count=$PINGCOUNT] = 0) do={

:log error "$HOST NOK"
/tool e-mail send to=$ADMINMAIL subject="ip $HOST neodpoveda" body="ip addresa $HOST je nedostupna" start-tls=yes
} else {
:log warning "$HOST OK"
/tool e-mail send to=$ADMINMAIL subject="ip $HOST je dostupna" body="ip addresa $HOST je dostupna" start-tls=yes
}
